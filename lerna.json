{
  "version": "0.0.2",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "create": {
      "homepage": "https://github.com/willin/uua",
      "license": "Apache-2.0",
      "access": "public"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "release(core): publish %s"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "ignoreChanges": ["**/test/**", "**/*.md", "packages/docs/**"]
}
